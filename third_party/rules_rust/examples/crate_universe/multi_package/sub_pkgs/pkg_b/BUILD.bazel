load("@m_pkgs//:defs.bzl", "aliases", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

rust_library(
    name = "pkg_b",
    srcs = glob(["src/**/*.rs"]),
    aliases = aliases(),
    compile_data = glob([
        "data/**/*.fullchain",
        "data/**/*.key",
        "data/**/*.cert",
    ]),
    proc_macro_deps = all_crate_deps(proc_macro = True),
    deps = all_crate_deps(normal = True),

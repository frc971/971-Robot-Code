load("//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

rust_binary(
    name = "hello_env",
    srcs = ["src/main.rs"],
    rustc_env_files = [":generate_rustc_env_file"],
)

genrule(
    name = "generate_rustc_env_file",
    outs = ["rustc_env_file"],
    cmd = "echo CARGO_PKG_VERSION=1.2.3 >> $@ && echo GREETING=Howdy >> $@",
)

sh_test(
    name = "output_test",
    srcs = ["output_test.sh"],
    args = ["$(location :hello_env)"],
    data = [":hello_env"],
)

rust_library(
    name = "hello_env_crate",
    srcs = ["src/lib.rs"],
    edition = "2018",
    rustc_env_files = [":generate_rustc_env_file"],
)

rust_test(
    name = "hello_env_crate_test",
    crate = ":hello_env_crate",
)
